<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ViewPagerFragment.DoctorDetailScheduleFragment"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="20dp">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Time"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btn_8am"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="8 AM"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_9am"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="9 AM"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button"
                    android:layout_margin="4dp" />
                <Button
                    android:id="@+id/btn_10am"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="10 AM"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_12pm"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="12 PM"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:id="@+id/btn_2pm"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="2 PM"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button"
                    android:layout_margin="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_3pm"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="3 PM"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btn_9pm"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="9 PM"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/style_button"
                    android:layout_margin="4dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_seek"
                android:layout_marginTop="20dp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Seek"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:background="@drawable/style_button_dark"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>